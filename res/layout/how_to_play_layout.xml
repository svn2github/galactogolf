<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:background="@drawable/background"
	android:padding="20px">
	<TextView android:text="How To Play" android:id="@+id/TextView01"
		android:textSize="16pt" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>

	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView android:text="@string/how_to_play_text" android:id="@+id/TextView01"
			 android:layout_weight="70"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textSize="8pt"></TextView>
		<ImageView android:id='@+id/how_to_play_rocket_image'
			android:src="@drawable/how_to_play_rocket" android:layout_weight="30"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center"></ImageView>
	</LinearLayout>

	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView android:text="@string/how_to_play_text2"
			android:id="@+id/TextView01" android:layout_weight="70"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textSize="8pt"></TextView>
		<ImageView android:id='@+id/how_to_play_wormhole_image'
			android:src="@drawable/how_to_play_wormhole"
			android:layout_weight="30"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center"></ImageView>
		</LinearLayout>
	
	<LinearLayout android:id="@+id/LinearLayout03"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView android:id='@+id/how_to_play_planets'
			android:src="@drawable/how_to_play_planets" android:layout_weight="30"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center"></ImageView>
	<TextView android:text="@string/how_to_play_text3"
			android:id="@+id/TextView01"  android:layout_weight="70"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="8pt"></TextView>
				</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout04"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView android:id='@+id/how_to_play_bounce_barrier'
			android:src="@drawable/how_to_play_bounce_barrier" android:layout_weight="30"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center"></ImageView>
	<TextView android:text="@string/how_to_play_text4"
			android:id="@+id/TextView01"  android:layout_weight="70"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="8pt"></TextView>
				</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout05"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView android:id="@+id/how_to_play_stars"
			android:src="@drawable/how_to_play_stars" android:layout_weight="30"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center"></ImageView>
	<TextView android:text="@string/how_to_play_text5"
			android:id="@+id/TextView01"  android:layout_weight="70"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="8pt"></TextView>
				</LinearLayout>

	<Button android:text="Ok" android:id="@+id/exit_how_to_play_button"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/selector"></Button>




</LinearLayout>
